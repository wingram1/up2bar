<article class="post">
    <div class="title">
        <h2>{{title}}</h2>
    </div>
    <div class="content">
        {{post_content}}
    </div>
    <div class="meta">
        Posted by {{user.username}} on {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s) on this post</a>
    </div>
</article>