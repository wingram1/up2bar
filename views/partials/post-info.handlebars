<article class="post">
  <div class="title">
    <h2><a href="/post/{{id}}">{{title}}</a></h2>
  </div>
  {{#if bar_name}}
    <p class="meta">at: {{bar_name}}</p>
  {{/if}}
  <div class="content">
    {{post_content}}
  </div>
  <div class="meta">
    Posted by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <br />
    <a href="/post/{{id}}">{{comments.length}} comment(s) on this post</a>
  </div>
</article>